<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Register</h1>
            <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="user[username]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="useremail">Email</label>
                    <input class="form-control" type="useremail" id="useremail" name="user[UniEmail]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class='row mb-3'>
                    <div class="mx-3">
                        <label class="form-label" for="usercity">City:</label>
                        <input class="form-control" type="usercity" id="usercity" name="user[userCity]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mx-3">
                        <label class="form-label" for="userstate">State:</label>
                        <input class="form-control" type="userstate" id="userstate" name="user[userState]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mx-3">
                        <label class="form-label" for="userzip">Zip:</label>
                        <input class="form-control" type="userzip" id="userzip" name="user[userZIP]" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-success">Register</button>
                </div>
        </div>
    </div>